<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f7fd"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="20dp"
    tools:context=".Admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/hrek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HoÅŸgeldin"
            android:fontFamily="@font/nunito_medium"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/edittext_border"
            android:elevation="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/homeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/homeIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/home_fill"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/doctorsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/doctors"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/doctor_i"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/settingIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/setting"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/indicator"
                android:layout_width="10dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_border"
                android:backgroundTint="#4D55CC"
                android:translationX="47dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>